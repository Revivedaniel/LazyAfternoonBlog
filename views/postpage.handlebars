<section id="postpage">
  <article id="post">
    <article class="post-header">
      <p class="title">{{title}}</p>
      <p class="posted-by">posted by {{user.name}} at {{time_created}}</p>
    </article>
    <article class="post-body">
      <p>{{post}}</p>
    </article>
    <article id="newComment">
      <h5>New Comment</h5>
      <input type="text" name="review" id="comment">
      <button type="submit" id="comment_submit" data-postId={{id}}>Submit</button>
    </article>
  </article>

  <article id="comments">
    {{#each comments as |comment|}}
    {{> comment-card}}
    {{/each}}
  </article>
</section>
<script src="/js/newComment.js"></script>