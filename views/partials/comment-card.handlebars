<section class="comment-container">
  <article class="comment-header">
    <p class="commented-by">posted by {{user.name}} at {{time_created}}</p>
  </article>
  <article class="comment-body">
    <p class="comment-text">{{comment}}</p>
  </article>
  {{#if owner}}
  <button class="commentUpdateButton">Update</button>
  <button class="saveCommentButton hidden" data-comment_id={{id}}>Save</button>
  <button class="commentDeleteButton">Delete</button>
  <button class="confirmCommentButton hidden" data-comment_id={{id}}>Confirm</button>
  <button class="cancelUpdateButton hidden">Cancel</button>
  {{/if}}
</section>